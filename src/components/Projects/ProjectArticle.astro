---
const { title, description, link, tags, image } = Astro.props;
---

<article class="flex flex-col items-center w-full gap-5 md:flex-row md:items-start">
    <div class="max-h-80 overflow-hidden md:w-2/5 rounded-lg">
        <img src={image} class="rounded-lg" />
    </div>
    <div class="md:w-3/5">
        <h3 class="text-xl mb-3 text-orange-300">{title}</h3>
        <p class="text-gray-300">{description}</p>
        <br />
        <div class="flex flex-wrap gap-3">
            {
                tags.map((tag) => (
                    <div class={`flex gap-2 items-center border rounded-2xl px-3 py-1 ${tag.class}`}>
                        <div class="flex items-center w-4 h-full">{<tag.icon />}</div>
                        <span class="font-medium text-sm">{tag.name}</span>
                    </div>
                ))
            }
        </div>
    </div>
</article>
