---
import Layout from "../layouts/Layout.astro";
import Intro from "../components/Intro.astro";
import Technologies from "../components/Technologies/Technologies.astro";
import Projects from "../components/Projects/Projects.astro";
import AboutMe from "../components/AboutMe.astro";
---

<Layout title="PÃ¡rrizas | Full-Stack Developer">
	<main class="text-gray-50">
		<Intro />
		<div class="flex flex-col items-center px-8 pb-20">
			<Projects />
			<Technologies />
			<AboutMe />
		</div>
	</main>
</Layout>
<script>
	const nav = document.getElementById("navHeader");
	const header = document.getElementById("mainHeader");
	const bounceProjects = document.getElementById("bounceProjects");

	if (window.scrollY <= 100) {
		nav.style.backgroundColor = `rgba(107, 114, 128, ${0.4 * (window.scrollY / 100)})`;
		header.style.top = `${50 - (50 * window.scrollY) / 100}px`;
	} else {
		nav.style.backgroundColor = "rgba(107, 114, 128, 0.4";
		header.style.top = "0";
	}

	document.addEventListener("scroll", function () {
		if (window.scrollY <= 100) {
			nav.style.backgroundColor = `rgba(107, 114, 128, ${0.4 * (window.scrollY / 100)})`;
			header.style.top = `${50 - (50 * window.scrollY) / 100}px`;
		} else {
			nav.style.backgroundColor = "rgba(107, 114, 128, 0.4";
			header.style.top = "0";
		}

		if (window.scrollY <= 200) {
			bounceProjects.style.opacity = `${1 - (window.scrollY / 200)}`;
		} else {
			bounceProjects.style.opacity = "0";
		}
	});
</script>
